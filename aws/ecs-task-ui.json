{
    "family": "pathfinder-ui",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512",
    "containerDefinitions": [
        {
            "name": "pathfinder-ui",
            "image": "<aws-account-id>.dkr.ecr.<region>.amazonaws.com/pathfinder-ui:latest",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 80,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "API_URL",
                    "value": "http://api.pathfinder.local:8080"
                },
                {
                    "name": "OTEL_URL",
                    "value": "http://otel-collector.pathfinder.local:4318/v1/traces"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/pathfinder-ui",
                    "awslogs-region": "<region>",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "wget --quiet --tries=1 --spider http://localhost/ || exit 1"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 30
            }
        }
    ],
    "executionRoleArn": "arn:aws:iam::<account-id>:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::<account-id>:role/pathfinderTaskRole"
}